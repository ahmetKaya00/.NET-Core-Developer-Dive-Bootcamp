@model Bootcamp
            <div class="card mb-3" id="bootcamp_@Model.Id">
                <div class="row">
                    <div class="col-md-4">
                        <img src="~/img/@Model.Image" class="img-fluid rounded-start" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <a asp-controller="Bootcamp" asp-action="Details" asp-route-id="@Model.Id">
                            <h2>@Model.Title</h2>
                            </a>
                            <p>@Model.Description</p>
                        </div>
                    </div>
                </div>
            </div>
  
